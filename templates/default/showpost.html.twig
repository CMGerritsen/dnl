{% extends 'base.html.twig' %}

{% block body %}
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            overflow-x: hidden;
        }

        .hero-image {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("{{ asset('images/Unknown.png') }}");
            height: 75%;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }

        .hero-text {
            text-align: center;
            position: absolute;
            top: 75%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
        }

        .hero-text button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 10px 25px;
            color: white;
            background-color: #1A5184;
            text-align: center;
            cursor: pointer;
            border-radius: 20px;
            width: 200px;
            height: 50px;
        }

        .hero-text button:hover {
            background-color: #555;
            color: white;
        }

        #laaste {
            width: 100%;
            text-align: center;
            margin-top: 3%;
        }

        #laaste h1 {
            width: 100%;
            border-bottom: 4px solid #1A5184;
            line-height: 0.1em;
            margin: 10px 0 20px;
            font-weight: bold;
        }

        h1 span {
            background: #fff;
            padding: 0 10px;
        }

        .devider {
            width: 100%;
            background-color: #1D5EA7;
        }

        .devider img {
            padding-top: 1%;
            padding-bottom: 1%;
            display: inline; /* the default for span */
        }
    </style>

    <div class="hero-image">
        <div class="hero-text">
            {#                        <button>Reserveer nu!</button>#}
        </div>
    </div>

    <div id="laaste" class="container">
        <h1><span>LAASTE NIEUWS</span></h1>
    </div>

    <div class="row" style="padding-left: 2%; padding-right: 2%; padding-top: 2%">
        {% for news in news %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <h4 style="text-align: center">{{ news.title }}</h4>
                    {#                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>#}
                    <div class="card-body">
                        <p class="card-text">{{ news.content|length > 1 ? news.content|striptags|slice(0, 200) ~ '...' }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="#{{ news.id }}"><button type="button" class="btn btn-sm btn-outline-secondary">Lees meer!</button></a>
                                {% if app.user %}
                                <a href="/admin/{{ news.id }}/edit"><button type="button" class="btn btn-sm btn-outline-secondary">edit</button></a>
                                {% endif %}
                            </div>
                            {#                        <small class="text-muted">9 mins</small>#}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="devider">
        <img style="width: 300px; float: left; margin-left: 5%" src="{{ asset('images/zaal.jpg') }}">
        <img style="width: 300px; float: right; margin-right: 5%" src="{{ asset('images/zaal.jpg') }}">
        <img style="width: 300px; display: block; margin-left: auto; margin-right: auto;"
             src="{{ asset('images/zaal.jpg') }}">
    </div>

    {% for news in news %}
        <div style="margin-bottom: 5%; margin-top: 4%" id="{{ news.id }}">
            <div style="background-color: lightgrey; width: 500px; height: 50px">
                <h2 style="text-align: center; color: dodgerblue">{{ news.title }}</h2>
            </div>

            <div class="container">
                <p style="width: 100%; text-align: center; margin-top: 3%">
                    {{ news.content|raw }}
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}